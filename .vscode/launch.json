    "version": "0.2.0",
    "configurations": [
        {
            "name": "Shepard - devspace",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2347,
            "host": "127.0.0.1",
            "substitutePath": [
                {
                  "from": "${workspaceFolder}",
                  "to": "/workspace",
                },
              ],
              "showLog": true,
              // "trace": "verbose", // use for debugging problems with delve (breakpoints not working, etc.)
        }
    ]
}